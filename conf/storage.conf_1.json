{
  // base configure
  "common": {
    "base_path": "/home/errlst/dfs/build/base_path/storage_1",
    "log_level": 0
  },

  // network configure
  "network": {
    "heart_timeout": 5000,
    "heart_interval": 1000
  },

  // storage configure
  "storage_service": {
    "id": 1, // 从1开始计数
    "ip": "0.0.0.0",
    "port": 8889,
    "master_ip": "127.0.0.1",
    "master_port": 8888,
    "thread_count": 5,
    "master_magic": 12345678,
    "sync_interval": 10, // 同步周期，单位为秒
    "hot_paths": ["/home/errlst/dfs/build/base_path/storage_1/hot"],
    "cold_paths": ["/home/errlst/dfs/build/base_path/storage_1/cold"]
  },

  // migrate service
  "migrate_service": {
    // 热数据迁移到冷数据的规则
    // 0 关闭服务
    // 1 根据最近访问时间迁移
    // 2 根据最近修改时间迁移
    "to_cold_rule": 1,

    // 超时时间，单位为秒
    "to_cold_timeout": 10,

    // 迁移行为
    // 0 只迁移本机数据
    // 1 迁移本机数据的同时，降低 storage 组里的副本数量
    "to_cold_action": 1,

    // cold 数据的副本数（hot 数据整个组的 storage 都会保存副本）。
    "to_cold_replica": 1,

    ///////////////////////////////////////////////

    // 冷数据迁移到热数据的规则
    // 0 关闭服务
    // 1 根据最近访问次数迁移
    "to_hot_rule": 1,

    // 访问次数
    "to_hot_times": 10,

    // 迁移行为
    // 0 只迁移本机数据
    // 1 迁移本机数据的同时，同步 storage 组
    "to_hot_action": 1

    ///////////////////////////////////////////////

    // 服务启动规则
  },

  // monitor service
  "monitor_service": {
    "interval": 1000
  }
}
